/* pages/pay/pay.wxss */

page {
  text-align: center;
  background: #f2f2f2;
}

.banner-background {
  width: 214.4vw;
  height: 120vw;
  border-radius: 107.2vw/60vw;
  /* background: #1b325f; */
  background:#f26c4f;
  margin: -80vw 0 0 -57.2vw;
}

.com-img {
  display: block;
  margin: -30vw auto 0;
  width: 14vw;
  height: 12.67vw;
}

.com-title {
  margin-top: 4.13vw;
  /* font-size: 6vw; */
  font-size:22px;
  color: white;
}

.categories {
  /* margin-top: 20.67vw; */
  /* margin-left: 3.07vw; */
  margin: 20.67vw auto 0;
  width: 95%;

}

.categories:after {
  display: block;
  content: "";
  clear: both;
}

.category {
  /* width: 24.93vw; */
  width: 32.8%;
  height: 9.73vw;
  line-height: 9.73vw;
  float: left;
  color: white;
  /* background: #3a89c9; */
  background: #f26c4f;
  font-size: 16px;
  border:1px solid #fff;
  border-bottom: none;
  border-radius: 8px 8px 0 0;
}
.categories .category:first-child{}

.category-selected {
  background: white;
  color: #1b325f;
  border:1px solid #f26c4f;
  border-bottom: none;
}

.service-table {
  /* width: 93.87vw; */
  width: 94.9%;
  /* height: 57.6vw; */
  background: white;
  text-align: left;
  margin:0 auto ;
  border:1px solid #f26c4f;
  border-top: none;
}
.service-table>view:first-child{
  border-bottom: 1px dashed #ccc;
}
.price-block, .detail-block {
  /* padding: 6.93vw 0 6.93vw 7.6vw; */
  padding:15px 0em;
  width: 90%;
  margin: 0 auto;
}

.service-table:after {
  content: "";
  display: block;
  clear: both;
}

.service-left {
  /* font-size: 4vw; */
  font-size: 16px;
}

.service-left, .service-right {
  display: inline-block;
  vertical-align: top;
}

.service-right {
  width: 58.67vw;
  text-align: left;
  /* font-size: 3.2vw; */
  font-size: 14px;
  color: #808080;
  margin-left: 6.13vw;
}

.service-right-top {
  font-size: 4vw;
}

.com-btn {
  color: white;
  margin: 10vw auto 0;
  background: #f26c4f;
  width: 90%;
  /* height: 12.13vw; */
  font-size:16px;
  height:auto;

}

.contract {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.con-img {
  width: 19.07vw;
  height: 17.87vw;
  margin-top:27.73vw;
}

.con-service {
  margin-top:9.87vw;
  font-size: 4.27vw;
}

.con-fee {
  font-size: 10.67vw;
  margin-top:3.87vw;
}

.con-btn {
  width: 46.27vw;
  height: 12vw;
  color: white;
  margin-top:23.87vw;
  background: #31910b;
}
