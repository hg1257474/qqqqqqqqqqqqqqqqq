/* pages/service/service.wxss */
.my-title{
  background: #fff;
  border-bottom: 1px solid #e6e6e6;
  padding:10px 5px;
  /* width: 100%; */
  display:block;
  text-align: center;
}

page {
  background: #f2f2f2;
}

.top-bar {
  display: flex;
  background-color: white;
  color: #fff;
  padding: 8px 5px;
  margin-bottom: 5vw;
}

.top-bar .top-tittle {
  flex: 2;
  color:black;
}

.top-bar .top-date {
}

.top-bar .top-status-tag {
  margin: 0 3vw;
  background: #199fef;
  color: #fff;
  padding: 0px 14px;
  border-radius: 14px;
}

.top-bar .top-status {
}

.name {
  margin-left: 3.6vw;
}

.no-services {
  display: block;
  text-align: center;
  line-height: 2em;
}

.date {
  margin-left: 11.47vw;
  color: #999;
}

.status {
  margin-left: 11.33vw;
  color: #999;
}

view {
  display: inline-block;
}

button {
  height: 14.67vw;
  border-bottom: 1px solid #e6e6e6;
  padding: 0;
  background: white;
}

/*service_list_wrapper*/

.service_list_wrapper {
  display: block;
}

.service_list_wrapper .single_service_data {
  border-bottom: 1px solid #e6e6e6;
  display: flex;
  background: #fff;
  padding: 3vw 2vw;
}

.service_list_wrapper .single_service_data .service_name {
  color: #383838;
  /* flex: 2; */
  width:60vw;
}

.service_list_wrapper .single_service_data .sec_info {
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 3vw;
}
